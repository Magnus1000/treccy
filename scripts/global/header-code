/* Default state: Outline visible, filled hidden */
#outlineHeart {
  fill: #BFF103!important;
}

/* Filled Heart, initially hidden */
#filledHeart {
  fill: #BFF103!important;
}

/* When class 'is-liked' is added to parent, hide outline and show filled */
.like-button.is-liked #outlineHeart {
  display: none!important;
}

.like-button.is-liked #filledHeart {
  display: inline!important;
}

</style>

