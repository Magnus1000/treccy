<script>
function addHeartClickListeners() {
  // Get all elements with class 'heart-full'
  const heartFullDivs = document.querySelectorAll('.heart-full');

  // Attach click event listeners to elements with class 'heart-full'
  heartFullDivs.forEach(div => {
    div.addEventListener('click', function() {
      console.log('heart-full-clicked');
    });
  });

  // Get all elements with class 'heart-empty'
  const heartEmptyDivs = document.querySelectorAll('.heart-empty');

  // Attach click event listeners to elements with class 'heart-empty'
  heartEmptyDivs.forEach(div => {
    div.addEventListener('click', function() {
      console.log('heart-empty-clicked');
    });
  });
}
</script>
